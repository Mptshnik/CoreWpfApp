<Window x:Class="CoreWpfApp.Views.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoreWpfApp.Views.Windows"
        mc:Ignorable="d"
        Title="Авторизация " Height="300" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10, 50">
            <StackPanel Orientation="Vertical">
                <Label>Логин</Label>
                <TextBox Name="textLogin"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label>Пароль</Label>
                <PasswordBox Name="textPassword"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0, 20">
                <Button Click="Button_Click" Cursor="Hand">Войти</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
